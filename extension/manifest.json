{
	"manifest_version": 3,
	"minimum_chrome_version": "88",
	"name": "ytSpeed",
	"description": "Originally designed for just YouTube, ytSpeed provides keyboard control of video playback speed.",
	"version": "0.0.1",
	"homepage_url": "https://github.com/glinton/ytspeed",

	"icons": {
		"16": "icons/icon-16.png",
		"32": "icons/icon-32.png",
		"48": "icons/icon-96.png",
		"64": "icons/icon-64.png",
		"96": "icons/icon-96.png",
		"128": "icons/icon-128.png",
		"256": "icons/icon-256.png"
	},

	"background": {
		"service_worker": "js/background.js"
	},

	"content_scripts": [
		{
			"matches": ["*://*/*"],
			"run_at": "document_start",
			"all_frames": false,
			"js": ["js/content.js"]
		}
	],

	"action": {
		"default_popup": "html/popup.html",
		"default_icon": {
			"16": "icons/icon-16.png",
			"32": "icons/icon-32.png",
			"48": "icons/icon-96.png",
			"64": "icons/icon-64.png",
			"96": "icons/icon-96.png",
			"128": "icons/icon-128.png",
			"256": "icons/icon-256.png"
		},
		"default_title": "ytspeed"
	},

	"commands": {
		"faster" : {
			"description": "Speed up playback (.5x)",
			"suggested_key": "Alt+X"
		},
		"slower" : {
			"description": "Slow down playback (.5x)",
			"suggested_key": "Alt+Z"
		},
		"normal": {
			"description": "Play at normal speed (1x)",
			"suggested_key": "Alt+A"
		}
	},

	"host_permissions": [
		"*://*/*"
	]
}
